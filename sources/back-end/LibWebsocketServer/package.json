{
  "name": "@work-shift/lib-websocket-server",
  "version": "0.0.0",
  "description": "[lib] Websocket Server",
  "type": "module",
  "engines": {
    "node": "^17.1.0",
    "pnpm": "^6.22.2"
  },
  "engineStrict": true,
  "volta": {
    "node": "17.1.0"
  },
  "main": "./LibWebsocketServer.mjs",
  "exports": {
    ".": "./LibWebsocketServer.mjs"
  },
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "lint": "./node_modules/.bin/eslint ./ --ext .mjs",
    "test": "pnpm run lint && NODE_ENV=test NODE_DEBUG=LibWebsocketServer* ./node_modules/.bin/c8 ./node_modules/.bin/mocha"
  },
  "author": "Dmitry N. Medvedev <dmitry.medvedev@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "uWebSockets.js": "github:uNetworking/uWebSockets.js#v20.4.0"
  },
  "devDependencies": {
    "c8": "^7.10.0",
    "chai": "^4.3.4",
    "dotenv": "^10.0.0",
    "eslint": "^8.3.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-chai-friendly": "^0.7.2",
    "eslint-plugin-import": "^2.25.3",
    "eslint-plugin-node": "^11.1.0",
    "mocha": "^9.1.3",
    "ws": "^8.3.0"
  },
  "mocha": {
    "allowUncaught": true,
    "failZero": true,
    "async-only": false,
    "bail": true,
    "checkLeaks": true,
    "forbidOnly": true,
    "exit": true,
    "forbidPending": true,
    "slow": 50,
    "timeout": 1000,
    "color": true,
    "diff": true,
    "fullTrace": true,
    "growl": false,
    "inline-diffs": true,
    "reporter": "spec",
    "noConfig": true,
    "noOpts": true,
    "exclude": [
      "**/node_modules/**/*"
    ],
    "spec": [
      "**/specs/*.mjs"
    ]
  }
}
