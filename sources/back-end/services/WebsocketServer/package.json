{
  "name": "@work-shift/websocketserver",
  "version": "0.0.0",
  "description": "Websocket Server",
  "type": "module",
  "engines": {
    "node": "^17.1.0",
    "pnpm": "^6.22.2"
  },
  "engineStrict": true,
  "volta": {
    "node": "17.1.0"
  },
  "main": "./server.mjs",
  "bin": "./server.mjs",
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "dev:server": "./node_modules/.bin/linkemon -V ./server.mjs"
  },
  "author": "Dmitry N. Medvedev <dmitry.medvedev@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "@work-shift/lib-websocket-server": "workspace:^0.0.0",
    "dotenv": "^10.0.0"
  },
  "nodemonConfig": {
    "restartable": "rs",
    "colours": true,
    "ext": "mjs",
    "verbose": true,
    "exec": "./server.mjs",
    "watch": [
      "./node_modules/@work-shift/**/*.mjs",
      "./server.mjs"
    ],
    "events": {
      "start": "clear"
    }
  },
  "devDependencies": {
    "linkemon": "^0.1.1",
    "nodemon": "^2.0.15"
  }
}
