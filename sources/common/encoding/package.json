{
  "name": "@work-shift/encoding",
  "version": "0.0.0",
  "description": "[lib] binary encoding",
  "type": "module",
  "engines": {
    "node": "^17.1.0",
    "pnpm": "^6.22.2"
  },
  "engineStrict": true,
  "volta": {
    "node": "17.1.0"
  },
  "exports": {
    "./encode.mjs": "./encode.mjs",
    "./decode.mjs": "./decode.mjs"
  },
  "files": [
    "encode.mjs",
    "decode.mjs"
  ],
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "lint": "./node_modules/.bin/eslint ./ --ext .mjs",
    "test": "pnpm run lint && NODE_ENV=test NODE_DEBUG=encoding:* ./node_modules/.bin/c8 ./node_modules/.bin/mocha"
  },
  "author": "Dmitry N. Medvedev <dmitry.medvedev@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.16.0",
    "@babel/eslint-parser": "^7.16.3",
    "@babel/eslint-plugin": "^7.14.5",
    "@babel/preset-env": "^7.16.4",
    "c8": "^7.10.0",
    "chai": "^4.3.4",
    "eslint": "^8.3.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-chai-friendly": "^0.7.2",
    "eslint-plugin-import": "^2.25.3",
    "eslint-plugin-node": "^11.1.0",
    "mocha": "^9.1.3"
  },
  "mocha": {
    "allowUncaught": true,
    "failZero": true,
    "asyncOnly": true,
    "bail": true,
    "checkLeaks": true,
    "exit": true,
    "forbidOnly": true,
    "forbidPending": true,
    "slow": 50,
    "timeout": 1000,
    "color": true,
    "diff": true,
    "fullTrace": true,
    "growl": false,
    "inline-diffs": true,
    "reporter": "spec",
    "noConfig": true,
    "noOpts": true,
    "exclude": [
      "**/node_modules/**/*"
    ],
    "spec": [
      "**/specs/*.mjs"
    ]
  }
}
